{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Run Tests",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "type": "shell",
            "command": "py.test",
            "args": [
                "-x",
                "--ff",
                "${fileDirname}"
            ]
        },
        {
            "taskName": "PEP8",
            "group": "test",
            "type": "shell",
            "command": "py.test",
            "args": [
                "--pep8",
                "${file}"
            ],
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern":{
                    "regexp": "^(.+):(\\d+):(\\d+):\\s(.+)$",
                    "file": 1,
                    "location": 2,
                    "column": 3,
                    "message": 4
                }
            }
        },
        {
            "taskName": "Submit Exercise",
            "type": "shell",
            "command": "exercism",
            "args": [
                "s",
                "${file}"
            ]
        },
        {
            "taskName": "Fetch New Exercise",
            "type": "shell",
            "command": "exercism",
            "args": [ "f" ]
        }
    ]
}